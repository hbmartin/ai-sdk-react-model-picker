{
  "permissions": {
    "allow": [
      "Bash(pnpm run build:*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run lint:fix)",
      "Bash(pnpm run typecheck)",
      "Bash(pnpm run format)",
      "Bash(pnpm run format:check)",
      "Bash(pnpm run test)",
      "Bash(git log:*)",
      "Bash(pnpm ls:*)",
      "Bash(grep:*)",
      "WebFetch(domain:typescript-eslint.io)",
      "WebFetch(domain:vercel.com)",
      "WebFetch(domain:sdk.vercel.ai)",
      "WebFetch(domain:ai-sdk.dev)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm run format"
          },
          {
            "type": "command",
            "command": "pnpm run typecheck"
          }
        ]
      }
    ]
  }
}
